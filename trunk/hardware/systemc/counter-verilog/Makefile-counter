default:        ../simx
include Vcounter.mk

CPPFLAGS        += -DVL_DEBUG=1 -W -Werror -Wall
LDLIBS          += -static -lsystemc -Bdynamic -lpthread

../simx:        test.o $(VK_GLOBAL_OBJS) $(VM_PREFIX)__ALL.a
		$(LINK) $(LDFLAGS) -g $^ $(LOADLIBES) $(LDLIBS) -o $@ $(LIBS) 2>&1 | c++filt

test.o:         ../test.cpp $(VM_PREFIX).h
