void main() {
   String name;
   int age;

   printLine("Введите Ваше имя и нажмите Enter:");
   name = readString();

   printLine("Привет, " + name + "!  Теперь введите Ваш возраст:");
   age = readInt();

   printLine(name + ", Вам " + age + " лет.");
}
