void main() {
	setBackgroundColor(black);

	while(true) {
		String key = readKey();  // pauses until you hit a key
		setColor(randomColor());
		drawString(key, true, true, 25, randomInt(getDrawingWidth()), randomInt(getDrawingHeight()));
	}
}
